# Firebase Configuration (VITE_ prefix = available in browser - these are safe to be public)
VITE_FIREBASE_API_KEY=your_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_auth_domain
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_storage_bucket
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id
VITE_ADMIN_EMAIL=your_admin_email

# Server-side only (NO VITE_ prefix = never exposed in browser bundle)
# These must be added to Vercel > Settings > Environment Variables
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD=your_admin_password
RESEND_API_KEY=your_resend_api_key
NOTIFICATION_EMAIL=your_notification_email@example.com

# Razorpay (https://dashboard.razorpay.com → Settings → API Keys)
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Stripe (https://dashboard.stripe.com → Developers → API Keys)
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxx

# Shiprocket (https://app.shiprocket.in → Settings → API)
SHIPROCKET_EMAIL=your_shiprocket_email
SHIPROCKET_PASSWORD=your_shiprocket_password
SHIPROCKET_PICKUP_PINCODE=410222
